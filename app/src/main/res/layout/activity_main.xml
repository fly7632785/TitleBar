<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jafir.titlebar.MainActivity">


    <com.jafir.TitleBar
        android:id="@+id/title_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_center_text="jafir"
        app:tb_left_img="@drawable/ic_home_as_up_arrow"
        app:tb_right_text="菜单" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左边图片  右边文字"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.jafir.TitleBar
        android:id="@+id/title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:tb_center_text="jafir"
        app:tb_right_img1_padding="4dp"
        app:tb_left_text="退出啦"
        app:tb_right_img1="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左边文字 右边图片"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jafir.TitleBar
        android:id="@+id/title_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:tb_center_text="jafir"
        app:tb_left_text="退出啦"
        app:tb_left_text_left_drawable="@mipmap/back"
        app:tb_right_img1="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持 左边文字的 drawable left  类似iOS返回"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jafir.TitleBar
        android:id="@+id/title_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:tb_center_text="jafir"
        app:tb_left_img_type="none"
        app:tb_right_img1="@drawable/ic_home_up_menu"
        app:tb_right_img2="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持右边2个图标"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jafir.TitleBar
        android:id="@+id/title_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:tb_center_text="jafir"
        app:tb_left_img_type="back"
        app:tb_right_img1="@drawable/ic_home_up_menu"
        app:tb_right_img2="@drawable/ic_launcher"
        app:tb_right_text="菜单" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持右边最多2个图标 一个文字,支持4种类型的left图标，back、close、none、menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jafir.TitleBar
        android:id="@+id/title_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:tb_center_text="jafir"
        app:tb_left_img="@drawable/ic_home_up_close"
        app:tb_left_text="退出啦"
        app:tb_right_img1="@drawable/ic_home_up_menu"
        app:tb_right_img2="@drawable/ic_launcher"
        app:tb_right_text="菜单" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持左边一个 图标一个文字   （不常用）"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
